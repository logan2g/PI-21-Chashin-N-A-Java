<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%t] %-5p %c %x- %m (%d{HH:mm:ss - dd.MM.yyyy})%n"/>
        </layout>
    </appender>
    <appender name="file" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="C:\log.txt"/>
		<param name="Append" value="false" />
        <param name="MaxBackupIndex" value="10"/>
        <param name="MaxFileSize" value="1MB"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%t] %-5p %c %x- %m (%d{HH:mm:ss - dd.MM.yyyy})%n"/>
        </layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
			<param name="LevelMax" value="ERROR" />
		</filter>
    </appender>
	<appender name="email" class="org.apache.log4j.net.SMTPAppender">
        <param name="BufferSize" value="1"/>
        <param name="From" value="nchashin@yandex.ru"/>
        <param name="SMTPHost" value="smtp.yandex.ru"/>
        <param name="SMTPPassword" value="sdfsf"/>
        <param name="SMTPPort" value="587"/>
        <param name="SMTPUsername" value="nchashin@yandex.ru"/>
        <param name="Subject" value="Log of messages"/>
        <param name="threshold" value="FATAL"/>
        <param name="To" value="chashinnikita086@google.com"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%t] %-5p %c %x- %m (%d{HH:mm:ss - dd.MM.yyyy})%n"/>
        </layout>
    </appender>
    <root>
        <level value="ALL"/>
        <appender-ref ref="console"/>
        <appender-ref ref="file"/>
		<appender-ref ref="email"/>
    </root>
</log4j:configuration>